@model IEnumerable<WebLab.Models.CartItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Корзина</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/Images/@item.LegalService.Image" alt="No image" width="100" />
            </td>
            <td>
                @Html.DisplayFor(m => item.LegalService.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                <a asp-controller="Cart"
                   asp-action="Delete" asp-route-id="@item.LegalService.LegalServiceId"
                   class="btn btn-outline-danger">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
